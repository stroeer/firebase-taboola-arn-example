{
  "expo": {
    "name": "firebase-taboola-arn-example",
    "slug": "firebase-taboola-arn-example",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "googleServicesFile": "./google-services.json",
      "package": "com.lukasbombachstroeer.firebasetaboolaarnexample"
    },
    "plugins": [
      "expo-router",
      "@react-native-firebase/app",
      "@react-native-firebase/perf",
      [
        "expo-build-properties",
        {
          "android": {
            // this is required by the expo-taboola plugin, which needs to have this repo available in the root project
            "extraMavenRepos": ["https://taboolapublic.jfrog.io/artifactory/mobile-release"],
            // if we don't set useLegacyPackaging to true, we run into errors on some development machines
            "useLegacyPackaging": true
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      }
    }
  }
}
